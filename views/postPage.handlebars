    <main class="Question-Container">

    {{> post-long postData}}

    <div class="Comment-Container">
        {{#each comments}}
            {{> comment}}
        {{else}}
            <main id="no-comments" class="error-container">
            <h3>No Comments yet!</h3>
            </main>
        {{/each}}
    </div>

    </main>

		<div id="modal-backdrop" class="hidden"></div>
		<div id="create-comment-modal" class="hidden">
			<div class="modal-dialog">

				<div class="modal-header">
					<h3>Create a Comment</h3>
					<button type="button" class="modal-close-button">&times;</button>
				</div>

				<div class="modal-body">
					<div class="question-input-element">
						<label for="author-text-input">Author:</label>
						<textarea id="author-text-input"></textarea>
					</div>
					<div class="question-input-element">

						<label for="question-text-input">Comment:</label>
						<textarea id="comment-text-input"></textarea>
					</div>
				</div>

				<div class="modal-footer">
					<button type="button" class="modal-return-button">Return</button>
					<button type="button" class="modal-add-button">Create Comment</button>
				</div>

			</div>
		</div>

    <script src="/postPage.js" charset="utf-8" defer></script>
